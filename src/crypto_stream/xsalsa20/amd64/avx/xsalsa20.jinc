inline fn __xsalsa20_xor_avx(reg u64 output plain len nonce key)
{
  stack u64 _output _plain _len _nonce _key;
  reg u32[8] subkey;

  _output = output;
  _plain = plain;
  _len = len;
  _nonce = nonce;
  _key = key;

  subkey = __hsalsa20_ref(nonce, key);

  output = _output;
  plain = _plain;
  len = _len;
  nonce = _nonce;
  nonce += 16;

  __salsa20_xor_1_avx(output, plain, len, nonce, subkey);
}


